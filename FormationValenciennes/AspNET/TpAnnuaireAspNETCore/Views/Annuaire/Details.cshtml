@model Contact
@if (Model == null)
{
    <div class="row">
        <div class="col alert alert-danger">
            Aucun contact avec cet id
        </div>
    </div>
}
else
{
   <div class="Vignette">
        <div class="row">
        <div class="col-7">
            <div class="row">
                <div class="col">
                    <h2>Détail du contact n°@Model.Id</h2>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    Nom : @Model.LastName
                </div>
            </div>
            <div class="row">
                <div class="col">
                    Prénom : @Model.FirstName
                </div>
            </div>
            <div class="row">
                <div class="col">
                    Téléphone : @Model.Email
                </div>
            </div>
            <div class="row">
                <div class="col">
                    Téléphone : @Model.Phone
                </div>
            </div>           
        </div>
        <div class="offset-1 col-2">
             <div class="row ">
               <img src="~/@Model.Url" class="detailImg"/>
            </div>
        </div>
    </div>
   </div>
    <div class="row">
        <a asp-controller="Annuaire" asp-action="Index" class="btn btn-secondary col">Retour à l'accueil</a>
    </div>
}